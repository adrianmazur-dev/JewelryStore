@model HomeViewModel

@{
    ViewData["Title"] = "Welcome to Jewelry Store";
}

<!-- Hero Section -->
<div class="text-center">
    <h1 class="display-4 fw-bold">Discover Your Perfect Jewelry</h1>
    <p class="lead">Handcrafted pieces for every occasion</p>
    <a href="#featured" class="btn btn-lg btn-outline-dark mt-3">Shop Now</a>
</div>

<!-- Features Section -->
<div class="container py-5">
    <div class="row g-4">
        <div class="col-md-4">
            <div class="text-center">
                <i class="bi bi-gem fs-1 text-primary mb-3"></i>
                <h3>Premium Quality</h3>
                <p>Only the finest materials and craftsmanship</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="text-center">
                <i class="bi bi-truck fs-1 text-primary mb-3"></i>
                <h3>Free Shipping</h3>
                <p>On orders over 200 PLN</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="text-center">
                <i class="bi bi-shield-check fs-1 text-primary mb-3"></i>
                <h3>Lifetime Warranty</h3>
                <p>Guaranteed quality and durability</p>
            </div>
        </div>
    </div>
</div>

<!-- Featured Products Section -->
<section id="featured" class="bg-light py-5">
    <div class="container">
        <h2 class="text-center mb-5">Featured Collections</h2>
        <div class="row">
            @foreach (var product in Model.FeaturedProducts)
            {
				@await Component.InvokeAsync("GalleryProduct", new { productId = product.Id })
            }
        </div>
    </div>
</section>

